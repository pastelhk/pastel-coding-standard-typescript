    "postversion": "npm run postversion --workspaces --if-present",
    "publish": "lerna publish --conventional-commits --yes"
  },
  "prettier": "@pasteltech/prettierrc",
  "devDependencies": {
    "lerna": "^6.5.1",
    "patch-package": "^6.5.1",
